@using BlazorWASM.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <button class="icon" @onclick="Logout">Logout</button>
    </Authorized>
    <NotAuthorized>
        <button class="icon" @onclick="Login">Login</button>
    </NotAuthorized>
</AuthorizeView>

@code {

    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }

}